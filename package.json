  "author": {
    "name": "Szymon Bretner (ncpa0cpl)",
    "email": "szymonb21@gmail.com"
  },
  "dependencies": {
    "@ncpa0cpl/node-worker-bridge": "^0.0.3",
    "@ts-morph/bootstrap": "^0.18.0",
    "dilswer": "^1.5.0",
    "node-os-walk": ">=1.0.2",
    "pretty-error": "^4.0.0"
  },
  "peerDependencies": {
    "esbuild": "^0.17.4"
  },
  "optionalDependencies": {
    "json-to-ts": "^1.7.0"
