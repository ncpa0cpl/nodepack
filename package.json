{
  "name": "@ncpa0cpl/nodepack",
  "version": "2.1.3",
  "main": "./dist/legacy/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "scripts": {
    "fix:lint": "eslint --fix .",
    "fix:prettier": "prettier -w ./src .",
    "test:lint": "eslint .",
    "test:prettier": "prettier -c ./src",
    "test:tsc": "tsc --noEmit",
    "build": "node ./scripts/build.cjs",
    "upgrade:deps": "node ./scripts/upgrade.mjs"
  },
  "keywords": [
    "esbuild",
    "packaging",
    "cjs",
    "commonjs",
    "esm",
    "esmodules",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/ncpa0cpl/nodepack"
  },
  "description": "Simple packaging script for node libraries based on ESBuild",
  "license": "MIT",
  "author": {
    "name": "Szymon Bretner (ncpa0cpl)",
    "email": "szymonb21@gmail.com"
  },
  "dependencies": {
    "@ncpa0cpl/node-worker-bridge": "^0.0.3",
    "@ts-morph/bootstrap": "^0.19.0",
    "dilswer": "2.1.1",
    "lodash.mergewith": "^4.6.2",
    "node-os-walk": ">=1.0.2",
    "pretty-error": "^4.0.0"
  },
  "peerDependencies": {
    "esbuild": ">0.17.0"
  },
  "optionalDependencies": {
    "json-to-ts": "^1.7.0"
  },
  "devDependencies": {
    "@ncpa0cpl/nodepack": "2.1.3",
    "@types/lodash.mergewith": "^4.6.7",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "esbuild": "^0.17.19",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-hook-tasks": "ncpa0cpl/git-hook-tasks",
    "husky": "^8.0.3",
    "json-to-ts": "^1.7.0",
    "pr-changelog-gen": "^1.1.1",
    "prettier": "^2.8.8",
    "prettier-plugin-jsdoc": "^0.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@1.22.19"
}
