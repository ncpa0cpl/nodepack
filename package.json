{
  "devDependencies": {
    "@ncpa0cpl/nodepack": "^2.0.0",
    "@swc-node/register": "^1.5.1",
    "@swc/core": "^1.2.242",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "esbuild": "^0.15.5",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-hook-tasks": "ncpa0cpl/git-hook-tasks",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "json-to-ts": "^1.7.0",
    "prettier": "^2.7.1",
    "prettier-plugin-jsdoc": "^0.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "name": "@ncpa0cpl/nodepack",
  "version": "2.0.1",
  "main": "./dist/legacy/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "scripts": {
    "fix:lint": "eslint --fix .",
    "fix:prettier": "prettier -w ./src .",
    "test:jest": "jest --coverage",
    "test:lint": "eslint .",
    "test:prettier": "prettier -c ./src",
    "test:tsc": "tsc --noEmit",
    "build": "rm -rf ./dist && node ./scripts/build.cjs",
    "test:build:cjs": "rm -rf ./test/dist && node ./test/build.cjs",
    "test:build:mjs": "rm -rf ./test/dist && node ./test/build.mjs"
  },
  "keywords": [
    "esbuild",
    "packaging",
    "cjs",
    "commonjs",
    "esm",
    "esmodules",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/ncpa0cpl/nodepack"
  },
  "description": "Simple packaging script for node libraries based on ESBuild",
  "license": "MIT",
  "author": {
    "name": "Szymon Bretner (ncpa0cpl)",
    "email": "szymonb21@gmail.com"
  },
  "dependencies": {
    "@ncpa0cpl/node-worker-bridge": "^0.0.3",
    "@ts-morph/bootstrap": "^0.16.0",
    "dilswer": "^1.3.0",
    "node-os-walk": ">=1.0.2",
    "pretty-error": "^4.0.0"
  },
  "peerDependencies": {
    "esbuild": "^0.15.5"
  },
  "optionalDependencies": {
    "json-to-ts": "^1.7.0"
  }
}
